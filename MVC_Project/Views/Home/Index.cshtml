@model IEnumerable<MVC_Project.Models.VM.ProductVM>
@{
    ViewBag.Title = "Home Page";
}
<h1>Products</h1>


<div class="container">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-sm-3">
                <div class="col-item">
                    <div class="photo">
                        <img src="@item.ImgUrl" class="img-responsive" alt="a" />
                    </div>
                    <div class="info">
                        <div class="row">
                            <div class="price col-md-6">
                                <h5>
                                    @item.Name
                                </h5>
                                <h5 class="price-text-color">
                                    $@item.Price
                                </h5>
                            </div>
                            <div class="rating hidden-sm col-md-6">
                                @if (item.Rate == 0)
                                {

                                }
                                @if (item.Rate == 1)
                                {
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                }
                                @if (item.Rate == 2)
                                {
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                }
                                @if (item.Rate == 3)
                                {
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                }
                                @if (item.Rate == 4)
                                {
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                }
                                @if (item.Rate == 5)
                                {
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="price-text-color fa fa-star"></i>
                                }
                            </div>
                        </div>
                        <div class="separator clear-left">
                            <p class="btn-add">
                                <i class="fa fa-shopping-cart"></i><a href="http://www.jquery2dotnet.com" class="hidden-sm">Add to cart</a>
                            </p>
                            <p class="btn-details">
                                <i class="fa fa-list"></i><a class="hidden-sm">@Html.ActionLink("More details", "PrductDetails", "Home", new { id = item.Product_Id }, null)</a>
                            </p>
                        </div>
                        <div class="clearfix">
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
