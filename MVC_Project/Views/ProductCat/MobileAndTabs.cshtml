@model PagedList.IPagedList<MVC_Project.Models.VM.ProductVM>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "MobileAndTabs";
}

@using (Html.BeginForm())
{
    <p style="margin-top:20px">
        Find by name: @Html.TextBox("SearchString")
        <input class="btn" type="submit" value="Search" />
    </p>
}

<div class="container">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-sm-3">
                <div class="col-item">
                    <div class="photo">
                        <img src="@item.ImgUrl" class="img-responsive" alt="a" />
                    </div>
                    <div class="info">
                        <div class="row">
                            <div class="price col-md-6">
                                <h5>
                                    @item.Name
                                </h5>
                                <h5 class="price-text-color">
                                    $@item.Price
                                </h5>
                            </div>
                            <div class="rating hidden-sm col-md-6">
                                @if (item.Rate == 0)
                                {

                                }
                                @if (item.Rate == 1)
                                {
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                }
                                @if (item.Rate == 2)
                                {
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                }
                                @if (item.Rate == 3)
                                {
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                }
                                @if (item.Rate == 4)
                                {
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                }
                                @if (item.Rate == 5)
                                {
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="price-text-color fa fa-star"></i>
                                    <i class="price-text-color fa fa-star"></i>
                                }
                            </div>
                        </div>
                        <div class="separator clear-left">
                            <p class="btn-add">
                                <i class="fa fa-shopping-cart"></i><br>@Html.ActionLink("Add to cart", "Add", "Cart", new { id = item.Product_Id }, null)
                            </p>
                            <p class="btn-details">
                                <i class="fa fa-list"></i><a class="hidden-sm">@Html.ActionLink("More details", "PrductDetails", "Home", item, null)</a>
                            </p>
                        </div>
                        <div class="clearfix">
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>


@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, currentFilter = ViewBag.CurrentFilter, id = 1 }))



